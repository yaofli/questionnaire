<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="git.lbk.questionnaire.placeholder.EncryptPropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>ihuyiAccount.properties</value>
                <value>sms.properties</value>
            </list>
        </property>
        <property name="fileEncoding" value="utf-8"/>
        <property name="encryptPropNames">
            <list>
                <value>sms.account</value>
                <value>sms.password</value>
            </list>
        </property>
    </bean>

    <bean id="sendSms" class="git.lbk.questionnaire.phone.SendSmsConsoleImpl">
        <property name="maxTryNumber" value="1"/>
        <property name="account" value="${sms.account}"/>
        <property name="password" value="${sms.password}"/>
    </bean>

    <bean id="sms" class="git.lbk.questionnaire.phone.SmsImpl" init-method="init" destroy-method="destroy">
        <property name="sendInterval" value="${sms.sendInterval}"/>
        <property name="ipDailyMaxSendCount" value="${sms.ipDailyMaxSendCount}"/>
        <property name="mobileDailyMaxSendCount" value="${sms.mobileDailyMaxSendCount}"/>
        <property name="clearMapInterval" value="${sms.clearMapInterval}"/>
    </bean>

    <bean id="smsService" class="git.lbk.questionnaire.phone.SmsServiceImpl">
        <property name="sms" ref="sms"/>
    </bean>

</beans>