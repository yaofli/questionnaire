<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="sms" class="git.lbk.questionnaire.sms.Sms2ConsoleImpl">
        <property name="maxTryNumber" value="${sms.maxTryNumber}"/>
    </bean>

    <bean id="asyncSms" class="git.lbk.questionnaire.sms.AsyncSmsImpl">
        <property name="sendSms" ref="sms"/>
    </bean>

    <bean id="frequencyFilter" class="git.lbk.questionnaire.sms.FrequencyFilter">
        <property name="cleanMapInterval" value="${sms.cleanMapInterval}"/>
        <property name="sendInterval" value="${sms.sendInterval}"/>
    </bean>

    <bean id="dailyCountFilter" class="git.lbk.questionnaire.sms.DailyCountFilter">
        <property name="ipDailyMaxSendCount" value="${sms.ipDailyMaxSendCount}"/>
        <property name="mobileDailyMaxSendCount" value="${sms.mobileDailyMaxSendCount}"/>
        <property name="smsDao" ref="smsCountDao"/>
    </bean>

    <bean id="smsService" class="git.lbk.questionnaire.sms.SmsServiceImpl">
        <property name="filters">
            <list>
                <ref bean="frequencyFilter"/>
                <ref bean="dailyCountFilter"/>
            </list>
        </property>
        <property name="sms" ref="asyncSms"/>
    </bean>

    <bean id="truncateSmsCountJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="dailyCountFilter"/>
        <property name="targetMethod" value="createNowLogTable"/>
    </bean>

    <bean id="smsSchedulerTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="truncateSmsCountJob"/>
        <!-- 每月的20号 02:00:00 运行-->
        <property name="cronExpression" value="0 0 2 20 * ?"/>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="smsSchedulerTrigger"/>
            </list>
        </property>
    </bean>

</beans>