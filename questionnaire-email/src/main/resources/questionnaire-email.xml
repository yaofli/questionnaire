<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="sender"
          class="org.springframework.mail.javamail.JavaMailSenderImpl"
          p:protocol="${email.protocol}"
          p:host="${email.host}"
          p:port="${email.port}"
          p:username="${email.username}"
          p:password="${email.password}">
        <property name="javaMailProperties">
            <props>
                <prop key="mail.${email.protocol}.auth">${email.auth}</prop>
                <prop key="com.sun.mail.smtp.SMTPSSLTransport">javax.net.ssl.SSLSocketFactory</prop>
                <prop key="mail.smtp.port">${email.port}</prop>
                <prop key="mail.smtp.socketFactory.port">${email.port}</prop>
            </props>
        </property>
    </bean>

    <bean id="taskExecutor"
          class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor"
          p:corePoolSize="3"
          p:maxPoolSize="10"/>

    <bean id="sendMimeMail" class="git.lbk.questionnaire.email.SendMimeMail"
          p:sender-ref="sender"
          p:from="${email.username}"/>

    <bean id="asyncSendMail" class="git.lbk.questionnaire.email.AsyncSendMailImpl"
          p:sendMail-ref="sendMimeMail"
          p:taskExecutor-ref="taskExecutor"/>

    <bean id="mailService" class="git.lbk.questionnaire.email.SendMailServiceImpl"
          init-method="init"
          destroy-method="destroy"
          p:asyncSendMail-ref="asyncSendMail"
          p:templatePath="mailTemplate"/>

</beans>