<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="sender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="protocol" value="${email.protocol}"/>
        <property name="host" value="${email.host}"/>
        <property name="port" value="${email.port}"/>
        <property name="username" value="${email.username}"/>
        <property name="password" value="${email.password}"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.${email.protocol}.auth">${email.auth}</prop>
                <prop key="com.sun.mail.smtp.SMTPSSLTransport">javax.net.ssl.SSLSocketFactory</prop>
                <prop key="mail.smtp.port">${email.port}</prop>
                <prop key="mail.smtp.socketFactory.port">${email.port}</prop>
            </props>
        </property>
    </bean>

    <bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="3"/>
        <property name="maxPoolSize" value="10"/>
    </bean>

    <bean id="sendMimeMail" class="git.lbk.questionnaire.email.SendMimeMail">
        <property name="sender" ref="sender"/>
        <property name="from" value="${email.username}"/>
    </bean>

    <bean id="asyncSendMail" class="git.lbk.questionnaire.email.AsyncSendMailImpl">
        <property name="sendMail" ref="sendMimeMail"/>
        <property name="taskExecutor" ref="taskExecutor"/>
    </bean>

    <bean id="mailService" class="git.lbk.questionnaire.email.SendMailServiceImpl"
          init-method="init"
          destroy-method="destroy">
        <property name="asyncSendMail" ref="asyncSendMail"/>
        <property name="baseDao" ref="emailValidateDao"/>
        <property name="templatePath" value="mailTemplate"/>
    </bean>

</beans>