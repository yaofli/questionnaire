<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean class="git.lbk.questionnaire.placeholder.EncryptPropertyPlaceholderConfigurer">
        <property name="location" value="emailAccountTest.properties"/>
        <property name="fileEncoding" value="utf-8"/>
        <property name="encryptPropNames">
            <list>
                <value>email.username</value>
                <value>email.password</value>
            </list>
        </property>
    </bean>

    <bean id="sender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="protocol" value="${email.protocol}"/>
        <property name="host" value="${email.host}"/>
        <property name="port" value="${email.port}"/>
        <property name="username" value="${email.username}"/>
        <property name="password" value="${email.password}"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.${email.protocol}.auth">${email.auth}</prop>
                <prop key="mail.${email.protocol}.port">${email.port}</prop>
                <prop key="mail.${email.protocol}.socketFactory.port">${email.port}</prop>
            </props>
        </property>
    </bean>

    <bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="3"/>
        <property name="maxPoolSize" value="10"/>
    </bean>

    <bean id="sendMimeMail" class="git.lbk.questionnaire.email.SendMimeEmail">
        <property name="sender" ref="sender"/>
        <property name="from" value="${email.username}"/>
    </bean>

    <bean id="asyncSendMail" class="git.lbk.questionnaire.email.AsyncSendEmailImpl">
        <property name="sendMail" ref="sendMimeMail"/>
        <property name="taskExecutor" ref="taskExecutor"/>
    </bean>

    <bean id="mailService" class="git.lbk.questionnaire.email.SendEmailServiceImpl"
          init-method="init">
        <property name="asyncSendMail" ref="asyncSendMail"/>
        <property name="templatePath" value="mailTemplate"/>
    </bean>

</beans>